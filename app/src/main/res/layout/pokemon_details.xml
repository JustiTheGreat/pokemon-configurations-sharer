                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/unknown"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/pokemondetails_textview_totalspeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/unknown"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
